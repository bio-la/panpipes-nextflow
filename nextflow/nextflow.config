
// ************ Spatial preprocessing pipeline configuration ************

params {
    outdir = "${launchDir}/results"
    // Preprocess
    sample= ["V1_Human_Lymph_Node", "V1_Human_Lymph_Node2"] /*change this*/

    run_filtering="True"
    filter_dict='{"spatial": {"obs": {"max":{"total_counts":3000}}}}'
    keep_barcodes="None"

    spatial_filetype="visium"
    grouping_var="['sample_id']"
    spatial_qc_metrics = "['total_counts', 'n_genes_by_counts']"

    norm_hvg_flavour = "squidpy"
    n_top_genes = 2000
    filter_by_hvg= "False"
    hvg_batch_key= "None" 
    squidpy_hvg_flavour="seurat"
    min_mean= 0.05
    max_mean=1.5
    min_disp=0.5
    theta=100
    clip="None" 
    n_pcs=50

    concat="True"

    outdir_path="/Users/sarah/Documents/ICB/Panpipes/15.nextflow/test_spatial_preprocess"


}

docker.enabled = true